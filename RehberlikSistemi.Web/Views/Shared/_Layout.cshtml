<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RehberlikSistemi.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RehberlikSistemi.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                 @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                    <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">RehberlikSistemi.Web</a>            }
                            else if (User.IsInRole("Teacher"))
                            {
                    <a class="navbar-brand" asp-controller="Teacher" asp-action="Dashboard">RehberlikSistemi.Web</a>              }
                            else if (User.IsInRole("Student"))
                            {
                    <a class="navbar-brand" asp-controller="Student" asp-action="Dashboard">RehberlikSistemi.Web</a>              }
                        }
            
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link text-dark fw-bold" asp-controller="Admin" asp-action="Dashboard">Admin Paneli</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Teachers">Öğretmenler</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Students">Öğrenciler</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Subjects">Dersler</a></li>
                            }
                            else if (User.IsInRole("Teacher"))
                            {
                                <li class="nav-item"><a class="nav-link text-dark fw-bold" asp-controller="Teacher" asp-action="Dashboard">Öğretmen Paneli</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Teacher" asp-action="Students">Öğrencilerim</a></li>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <li class="nav-item"><a class="nav-link text-dark fw-bold" asp-controller="Student" asp-action="Dashboard">Öğrenci Paneli</a></li>
                                <li class="nav-item"><a class="nav-link text-dark" asp-controller="Student" asp-action="Availability">Müsaitlik Durumum</a></li>
                            }
                        }
                    </ul>
                    
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                            <span class="navbar-text me-3 text-primary">@User.Identity.Name</span>
                            <button type="submit" class="btn btn-outline-danger btn-sm">Çıkış Yap</button>
                        </form>
                    }
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - RehberlikSistemi.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
