@{
    ViewData["Title"] = "Giriş Yap - Rehberlik Destekli Öğrenci Planlama";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow rounded-3 border-0">
            <div class="card-body p-5">
                <h3 class="card-title text-center mb-4 fw-bold">Sisteme Giriş</h3>
                <p class="text-center text-muted mb-4">Devam etmek için lütfen giriş yapın.</p>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">E-Posta Adresi</label>
                        <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="ornek@okul.com" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-semibold">Şifre</label>
                        <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="••••••••" required>
                    </div>
                    <div class="mb-4 form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" value="true">
                        <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm">Giriş Yap</button>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-4 mb-0" role="alert">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger mb-0" })
                        </div>
                    }
                </form>
            </div>
        </div>
        <div class="text-center mt-4">
            <small class="text-muted">Rehberlik Destekli Öğrenci Planlama &copy; 2026</small>
        </div>
    </div>
</div>
