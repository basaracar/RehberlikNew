@model IEnumerable<RehberlikSistemi.Web.Models.Teacher.TeacherStudentViewModel>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Sorumlu Olduğum Öğrenciler</h2>
            <a asp-action="UnassignedStudents" class="btn btn-primary">+ Boştaki Öğrencileri Gör / Ekle</a>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>Sınıfı</th>
                            <th>Hedef Üniversite</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(!Model.Any()) {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Henüz atanmış bir öğrenciniz bulunmuyor.</td>
                            </tr>
                        }
                        @foreach(var s in Model) {
                            <tr>
                                <td>@s.FullName</td>
                                <td>@s.GradeLevel</td>
                                <td>@s.TargetUniversity</td>
                                <td>
                                    <a asp-action="StudentDetail" asp-route-id="@s.ProfileId" class="btn btn-sm btn-info text-white">Detay</a>
                                    <a asp-action="EditStudent" asp-route-id="@s.ProfileId" class="btn btn-sm btn-primary ms-1">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
