@model dynamic
@{
    ViewData["Title"] = "Müsaitlik ve Sınav Takvimi";
}

<div class="row">
    <div class="col-12 mb-3">
        <a asp-action="StudentDetail" asp-route-id="1" class="btn btn-sm btn-outline-secondary">&larr; Öğrenciye Dön</a>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Haftalık Müsaitlik (Okul/Dershane)</h5>
                <button class="btn btn-sm btn-primary">+ Ekle</button>
            </div>
            <div class="card-body">
                <p class="small text-muted">Öğrencinin okulda veya dershanede olduğu, ders çalışamayacağı saat aralıkları.</p>
                <!-- Liste buraya gelecek -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center text-muted">Kayıt Bulunmuyor</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Yaklaşan Sınavlar</h5>
                <button class="btn btn-sm btn-warning">+ Sınav Ekle</button>
            </div>
            <div class="card-body">
                <p class="small text-muted">Algoritma, bu sınav tarihlerini dikkate alarak plan oluşturacaktır.</p>
                <!-- Sınav Listesi buraya gelecek -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center text-muted">Yaklaşan Sınav Yok</li>
                </ul>
            </div>
        </div>
    </div>
</div>
