@model IEnumerable<RehberlikSistemi.Web.Models.Teacher.TeacherStudentViewModel>
@{
    ViewData["Title"] = "Boştaki Öğrenciler";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Boştaki Öğrenciler</h2>
            <a asp-action="Students" class="btn btn-outline-secondary">Geri Dön</a>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>Sınıfı</th>
                            <th>Hedef Üniversite</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(!Model.Any()) {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Şu anda boştaki (atanmamış) bir öğrenci bulunmuyor.</td>
                            </tr>
                        }
                        @foreach(var s in Model) {
                            <tr>
                                <td>@s.FullName</td>
                                <td>@s.GradeLevel</td>
                                <td>@s.TargetUniversity</td>
                                <td>
                                    <form asp-action="AssignStudent" method="post">
                                        <input type="hidden" name="profileId" value="@s.ProfileId" />
                                        <button type="submit" class="btn btn-sm btn-success">Bana Ekle</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
