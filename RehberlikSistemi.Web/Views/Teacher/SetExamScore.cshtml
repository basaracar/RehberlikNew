@model RehberlikSistemi.Web.Models.Teacher.SetExamScoreViewModel
@{
    ViewData["Title"] = "Sınav Sonucu Gir";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">Sınav Sonucu: @Model.SubjectName</h4>
            </div>
            <div class="card-body">
                <form asp-action="SetExamScore" method="post">
                    <input type="hidden" asp-for="ExamId" />
                    <input type="hidden" asp-for="ProfileId" />
                    <input type="hidden" asp-for="SubjectName" />

                    <div class="mb-3">
                        <label asp-for="Score" class="form-label fw-bold">Puan (0-100)</label>
                        <input asp-for="Score" class="form-control" type="number" min="0" max="100" placeholder="Örn: 85" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="StudentDetail" asp-route-id="@Model.ProfileId" class="btn btn-outline-secondary">İptal</a>
                        <button type="submit" class="btn btn-info text-white">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
