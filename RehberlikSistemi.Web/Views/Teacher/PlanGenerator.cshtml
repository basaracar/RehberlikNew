@model RehberlikSistemi.Web.Models.Teacher.PlanGeneratorViewModel
@{
    ViewData["Title"] = "Program Oluşturucu";
}

<div class="row">
    <div class="col-12 mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>@Model.StudentFullName - Otomatik Plan Önerisi</h2>
            <a asp-action="StudentDetail" asp-route-id="@Model.ProfileId" class="btn btn-outline-secondary">İptal</a>
        </div>
        
        @if (!Model.IsSuccessful)
        {
            <div class="alert alert-warning">
                <h4>Uyarı</h4>
                <p>@Model.Message</p>
                <p>Lütfen öğrencinin (veya sizin) öğrenci paneli üzerinden uygun saatlerini belirtmesini sağlayınız.</p>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Öğrencinin yaklaşan sınavları ve geçmiş başarı durumuna göre algoritma tarafından aşağıdaki 7 günlük plan oluşturulmuştur. Onaylıyorsanız kaydedebilirsiniz.
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Önerilen Çalışma Programı (Gelecek 7 Gün)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tarih</th>
                                    <th>Saat Aralığı</th>
                                    <th>Ders</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.ProposedTasks.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">Sistem uygun saat bulamadığı veya ders kayıtları yetersiz olduğu için plan oluşturamadı.</td>
                                    </tr>
                                }
                                @foreach (var task in Model.ProposedTasks.OrderBy(t => t.ScheduledDate).ThenBy(t => t.StartTime))
                                {
                                    <tr>
                                        <td class="align-middle fw-medium">@task.ScheduledDate.ToString("dd.MM.yyyy") (@task.ScheduledDate.ToString("dddd", new System.Globalization.CultureInfo("tr-TR")))</td>
                                        <td class="align-middle">@task.StartTime.ToString(@"hh\:mm") - @task.EndTime.ToString(@"hh\:mm")</td>
                                        <td class="align-middle">
                                            <span class="badge bg-secondary">@task.Subject.Name</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @if (Model.ProposedTasks.Any())
            {
                <form asp-action="SaveGeneratedPlan" method="post" class="mt-3">
                    <input type="hidden" asp-for="ProfileId" />
                    <input type="hidden" asp-for="SerializedTasks" />
                    <button type="submit" class="btn btn-success btn-lg w-100">Planı Sisteme Kaydet</button>
                </form>
            }
        }
    </div>
</div>
