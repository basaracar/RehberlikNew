@model IEnumerable<RehberlikSistemi.Web.Models.Admin.StudentViewModel>
@{
    ViewData["Title"] = "Öğrenciler";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Öğrenci Listesi</h2>
            <a asp-action="CreateStudent" class="btn btn-success">+ Yeni Öğrenci Ekle</a>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Sınıf</th>
                            <th>Sorumlu Öğretmen</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(!Model.Any()) {
                            <tr><td colspan="4" class="text-center text-muted">Kayıtlı öğrenci bulunamadı.</td></tr>
                        }
                        @foreach(var s in Model) {
                            <tr>
                                <td>@s.FirstName @s.LastName</td>
                                <td>@s.GradeLevel</td>
                                <td>
                                    <span class="badge bg-info text-dark">@s.TeacherName</span>
                                </td>
                                <td>
                                    <a asp-action="EditStudent" asp-route-id="@s.ProfileId" class="btn btn-sm btn-outline-primary">Düzenle / Ata</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
