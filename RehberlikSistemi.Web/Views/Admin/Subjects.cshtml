@using RehberlikSistemi.Web.Core.Entities
@model IEnumerable<Subject>
@{
    ViewData["Title"] = "Dersler";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Ders Listesi</h2>
            <a asp-action="CreateSubject" class="btn btn-success">+ Yeni Ders Ekle</a>
        </div>
        
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ders Adı</th>
                            <th>Türü</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(!Model.Any()) {
                            <tr><td colspan="4" class="text-center text-muted">Sistemde tanımlı ders bulunamadı.</td></tr>
                        }
                        @foreach(var s in Model) {
                            <tr>
                                <td>@s.Id</td>
                                <td><strong>@s.Name</strong></td>
                                <td>
                                    @s.SubjectType
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger" disabled>Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
